{
  "manifest_version": 2,
  
  "name": "Clutter Purge",
  "description": "Press [F2] to enable clutter-free view on trello, youtube & google keep individual item screens.",
  "version": "1.3",
  "author": "Ryan Ash",  
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
   "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://trello.com/*"],
      "css": ["css/trello.css"],
      "js": ["js/jquery-3.2.1.min.js", "js/jquery.cookie-1.4.1.min.js", "js/purge.js", "js/trello-addons.js"]
    },
    {
      "matches": ["https://youtube.com/*", "https://www.youtube.com/*"],
      "css": ["css/youtube.css"],
      "js": ["js/jquery-3.2.1.min.js", "js/jquery.cookie-1.4.1.min.js", "js/purge.js"]
    },
    {
      "matches": ["https://keep.google.com/*"],
      "css": ["css/keep.css"],
      "js": ["js/jquery-3.2.1.min.js", "js/jquery.cookie-1.4.1.min.js", "js/purge.js"]
    },
    {
      "matches": ["https://web.controller.bot/*"],
      "css": ["css/web_controller.css"],
      "js": ["js/jquery-3.2.1.min.js", "js/jquery.cookie-1.4.1.min.js", "js/purge.js", "js/text-template.js"]
    }
  ]
}
