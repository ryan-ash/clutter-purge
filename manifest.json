{
  "manifest_version": 2,
  
  "name": "Tricky Chaos Kit",
  "description": "A solution for times when you want to get rid of everything distracting along with some features to make it all faster. Activate at Trello, Youtube, Google Keep or Web Controller by pressing F2. IDDQD",
  "version": "1.5",
  "author": "Ryan Ash",  
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
   "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://trello.com/*"],
      "css": ["css/trello.css"],
      "js": ["js/jquery-3.2.1.min.js", "js/jquery.cookie-1.4.1.min.js", "js/purge.js", "js/trello-addons.js"]
    },
    {
      "matches": ["https://youtube.com/*", "https://www.youtube.com/*"],
      "css": ["css/youtube.css"],
      "js": ["js/jquery-3.2.1.min.js", "js/jquery.cookie-1.4.1.min.js", "js/purge.js"]
    },
    {
      "matches": ["https://keep.google.com/*"],
      "css": ["css/keep.css"],
      "js": ["js/jquery-3.2.1.min.js", "js/jquery.cookie-1.4.1.min.js", "js/purge.js"]
    },
    {
      "matches": ["https://web.controller.bot/*"],
      "css": ["css/font-awesome.min.css", "css/web_controller.css"],
      "js": ["js/jquery-3.2.1.min.js", "js/jquery.cookie-1.4.1.min.js", "js/purge.js", "js/text-template.js"]
    }
  ],
  "web_accessible_resources": [
    "fonts/fontawesome-webfont.eot",
    "fonts/fontawesome-webfont.svg",
    "fonts/fontawesome-webfont.ttf",
    "fonts/fontawesome-webfont.woff",
    "fonts/fontawesome-webfont.woff2",
    "fonts/FontAwesome.otf"
  ]
}
